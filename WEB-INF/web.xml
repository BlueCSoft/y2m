    <param-value/> 
  </context-param>  
  <context-param> 
    <param-name>xmlcr</param-name>  
    <param-value>no</param-value> 
  </context-param>  
  <context-param> 
    <param-name>checkcode</param-name>  
    <param-value>no</param-value> 
  </context-param>  
  <context-param> 
    <param-name>loginsql</param-name>  
    <param-value>select userid gUserId,usercode gUserCode,usercode gLoginCode,username gUserName,psid gpsid, to_char(sysdate,'yyyy-MM-dd') gWorkDate, substr(to_char(sysdate,'yyyy-MM-dd'),1,7) gPubYf, to_char(sysdate,'yyyy') gYear, to_char(sysdate,'MM') gMonth, to_char(sysdate,'dd') gDay, nvl(user_pass,'') gPassWord, nvl(user_level,1) gUserLevel,userid gLoginId,psid gStoreId from pub_user where usercode='%s'</param-value> 
  </context-param>  
  <context-param> 
    <param-name>userid</param-name>  
    <param-value>gUserId</param-value> 
  </context-param>  
  <context-param> 
    <param-name>usercode</param-name>  
    <param-value>gUserCode</param-value> 
  </context-param>  
  <context-param> 
    <param-name>password</param-name>  
    <param-value>gPassWord</param-value> 
  </context-param>  
  <context-param> 
    <param-name>md5</param-name>  
    <param-value>1</param-value> 
  </context-param> 
  <context-param> 
    <param-name>logincode</param-name>  
    <param-value>gLoginCode</param-value> 
  </context-param>  
  <context-param> 
    <param-name>globalobject</param-name>  
    <param-value>gUserId,gUserCode,gUserName,gpsid,gWorkDate,gPubYf,gYear,gMonth,gDay,gUserLevel,gLoginId,gStoreId</param-value> 
  </context-param>  
  <context-param>
    <param-name>adminsql</param-name>
    <param-value>select id,fun_id,fun_name from sys_funs --%s 
	             where not nvl(pageid,' ')=' ' and '%s' like pageid||'%'</param-value>
  </context-param>

  <context-param>
    <param-name>usersql</param-name>
    <param-value>select c.id,c.fun_id,c.fun_name
                             from sys_userrole a,sys_rolefun b,sys_funs c
	             where a.user_id=%s and a.isuse=1 and b.role_id=a.role_id and b.isuse=1 and c.id=b.fid
		       and (not nvl(c.pageid,' ')=' ') and '%s' like c.pageid||'%'</param-value>
  </context-param>

  <context-param> 
    <param-name>osid</param-name>  
    <param-value>201</param-value> 
  </context-param>  

  <context-param> 
    <param-name>erpserverurl</param-name>  
