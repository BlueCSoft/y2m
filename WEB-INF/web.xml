  </context-param>  
  <context-param> 
    <param-name>printtrack</param-name>  
    <param-value>yes</param-value> 
  </context-param>  
  <context-param> 
    <param-name>rlogins</param-name>  
    <param-value>yes</param-value> 
  </context-param>  
  <context-param> 
    <param-name>rpageinfo</param-name>  
    <param-value>yes</param-value> 
  </context-param>  
  <context-param> 
    <param-name>webapptype</param-name>  
