  </servlet>  
  <servlet-mapping> 
    <servlet-name>applyupdate</servlet-name>  
    <url-pattern>/bin/util/applyupdate</url-pattern> 
  </servlet-mapping>  
  <listener> 
    <listener-class>bluec.base.CAppListener</listener-class> 
  </listener>  
  <context-param> 
    <param-name>connectstr</param-name>  
    <param-value>java:comp/env/jdbc/y2m</param-value>  
    <!--java:comp/env/--> 
  </context-param>  
  <context-param> 
