  </context-param>  
  <context-param> 
    <param-name>charset-d</param-name>  
    <param-value>GBK</param-value> 
  </context-param>  
  <context-param> 
    <param-name>databasetype</param-name>  
    <param-value>0</param-value>  
    <!--0-oracle 1-mssql --> 
  </context-param>  
  <context-param> 
    <param-name>vroot</param-name>  
    <param-value>/bin/docfile/</param-value> 
  </context-param>  
  <context-param> 
    <param-name>dlfpath</param-name>  
    <param-value>/bin/docfile/</param-value> 
  </context-param>  
  <context-param> 
    <param-name>filepath1</param-name>  
    <param-value>/bin/docfile/</param-value> 
  </context-param>  
  <context-param> 
    <param-name>filepath2</param-name>  
    <param-value>/bin/docfile/</param-value> 
  </context-param>  
  <context-param> 
    <param-name>recordstep</param-name>  
